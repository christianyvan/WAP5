{% extends '::base.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

 {% block body %}
 {% include 'OCWebAgencyBundle:Navigation:backEnd.html.twig' %}
<div class="container">
    <h1>Dashboard</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Author</th>
                <th>Content</th>
                <th>Post title</th>
                <th>Date</th>
                <th>Valided</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.author }}</td>
                    <td>{{ comment.content }}</td>
                    {% for post in posts %}
                        {% if post.id == comment.postId %}
                            <td>{{ post.title }}</td>
                        {% endif %}
                    {% endfor %}
                     <td>{{ comment.date|date("m/d/Y") }}</td>


                    <td>
                        <a href="{{ path('admin_comment_show',{'id': comment.id }) }}" class="btn btn-success  "><span class=" glyphicon glyphicon-ok-circle"></span></a>
                    </td>
                    <td>
                        <a href="{{ path('admin_comment_delete',{'id': comment.id }) }}" class="btn btn-danger "><span class=" glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock body %}

